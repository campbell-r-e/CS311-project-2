generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Flashcard {
  id           Int        @id @default(autoincrement())
  questionId   String
  prompt       String
  answer       String
  points       Int        @default(1)
  difficultyId Int
  difficulty   Difficulty @relation(fields: [difficultyId], references: [id])
}

model Difficulty {
  id   Int    @id @default(autoincrement())
  name String @unique

  Flashcard Flashcard[]
}

model ViewStats {
  id                Int      @id @default(autoincrement())
  amountUnderstood  Int      @default(0)
  nextScheduledView DateTime
  flashcardId       Int
}
